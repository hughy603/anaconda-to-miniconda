# Environment variables for local testing
# Source this file before running local tests: source .env.local

# GitHub Actions local testing flag
export ACT_LOCAL_TESTING=true

# Skip Docker builds in workflows
export SKIP_DOCKER_BUILDS=true

# Skip long-running tests
export SKIP_LONG_RUNNING_TESTS=true

# Mock GitHub token for local testing
export GITHUB_TOKEN=local-testing-token

# Reviewdog GitHub API token for local testing
export REVIEWDOG_GITHUB_API_TOKEN=local-testing-token

# Python versions to test
export PYTHON_VERSIONS="3.11 3.12"

# Default Python version
export DEFAULT_PYTHON_VERSION="3.11"

# Skip specific steps in workflows
export SKIP_CODECOV=true
export SKIP_SONARQUBE=true

# Local testing directories
export LOCAL_TESTING_DIR=".github/local-testing"
export LOCAL_EVENTS_DIR=".github/local-testing/events"

# Docker image for act
export ACT_DOCKER_IMAGE="ghcr.io/catthehacker/ubuntu:act-latest"
